@model SistemadePasteleria.Models.Pedido

@{
    ViewData["Title"] = "Detalles Pedido";
}

<h1>Detalles del Pedido</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente.Nombre</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<h4>Detalles del Pedido</h4>
<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.DetallePedidos)
        {
            <tr>
                <td>@detalle.Producto.Nombre</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.PrecioUnitario</td>
                <td>@(detalle.Cantidad* detalle.PrecioUnitario)</td>
            </tr>
        }

    </tbody>
</table>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
