@model IEnumerable<SistemadePasteleria.Models.Producto>

@if (!Model.Any())
{
    <tr>
        <td colspan="6" class="text-center text-muted">No se encontraron productos.</td>
    </tr>
}
else
{
    @foreach (var item in Model)
    {
        <tr>
            <td class="align-middle">@item.Nombre</td>
            <td class="align-middle">@item.Precio.ToString("C")</td>
            <td class="align-middle">@item.Stock</td>
            <td class="align-middle">
                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                {
                    <img src="@item.ImagenUrl" width="70" height="70"
                         style="border-radius: 8px; object-fit: cover; transition: transform 0.3s;"
                         onmouseover="this.style.transform='scale(1.6)'"
                         onmouseout="this.style.transform='scale(1)'" />
                }
                else
                {
                    <span class="text-muted">No hay imagen</span>
                }
            </td>
            <td class="align-middle">@item.Categoria?.Nombre</td>
            <td class="align-middle">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1">
                    <i class="bi bi-info-circle"></i> Detalles
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </td>
        </tr>
    }
}
