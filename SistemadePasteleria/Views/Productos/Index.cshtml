@model IEnumerable<SistemadePasteleria.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="text-center fw-bold mb-4" style="color: #dc3545;">
    <i class="bi bi-cake2-fill me-2"></i>Gestión de Productos
</h1>


<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-outline-dark  px-4 py-2">
        <i class="bi bi-plus-lg"></i> Crear nuevo producto
    </a>

    <form asp-action="Index" method="get" class="d-flex" role="search">
        <input type="text" name="buscar" class="form-control me-2" placeholder="Buscar producto..." />
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<table class="table table-hover table-bordered text-center shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.Nombre</td>
                <td class="align-middle">@item.Precio.ToString("C")</td>
                <td class="align-middle">@item.Stock</td>
                <td class="align-middle">
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" width="70" height="70"
                             style="border-radius: 8px; object-fit: cover; transition: transform 0.3s;"
                             onmouseover="this.style.transform='scale(1.6)'"
                             onmouseout="this.style.transform='scale(1)'"
                             title="Ver imagen" />
                    }
                    else
                    {
                        <span class="text-muted">No hay imagen</span>
                    }
                </td>
                <td class="align-middle">@item.Categoria?.Nombre</td>
                <td class="align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
