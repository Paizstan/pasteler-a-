@model SistemadePasteleria.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="text-center text-primary mb-4">
    <i class="bi bi-pencil-square"></i> Editar Producto
</h2>

<div class="row justify-content-center">
    <div class="col-md-6 shadow p-4 rounded bg-light">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label fw-bold">Precio</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label fw-bold">Stock</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Imagen actual</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl" width="100" style="border-radius: 8px; margin-bottom: 10px;" />
                }
                else
                {
                    <span class="text-muted">No hay imagen</span>
                }

                <label class="form-label mt-2">Subir nueva imagen</label>
                <input type="file" name="imagenInput" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label fw-bold">Categoría</label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save-fill"></i> Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
