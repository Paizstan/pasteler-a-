@model SistemadePasteleria.Models.ViewModels.PedidoViewModel

@{
    ViewData["Title"] = "Registrar Pedido";
}

<h2>Registrar Pedido</h2>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
    </div>

    <hr />
    <h4>Productos</h4>

    <table class="table" id="productosTable">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Primera fila para agregar un producto -->
            <tr>
                <td>
                    <select name="Productos[0].ProductoId" class="form-control" asp-items="ViewBag.Productos"></select>
                </td>
                <td>
                    <input name="Productos[0].Cantidad" type="number" class="form-control" min="1" value="1" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="eliminarFila(this)">Eliminar</button>
                </td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-secondary mb-3" onclick="agregarProducto()">+ Agregar otro producto</button>

    <div class="mb-3">
        <label>Total (estimado)</label>
        <input class="form-control" readonly value="Se calcula al guardar" />
    </div>

    <button type="submit" class="btn btn-primary">Registrar Pedido</button>
</form>

<div class="mt-3">
    <a asp-action="Index">← Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let index = 1;

        function agregarProducto() {
            const tableBody = document.querySelector("#productosTable tbody");

            const newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td>
                    <select name="Productos[${index}].ProductoId" class="form-control">
                        ${document.querySelector("select[name='Productos[0].ProductoId']").innerHTML}
                    </select>
                </td>
                <td>
                    <input name="Productos[${index}].Cantidad" type="number" class="form-control" min="1" value="1" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="eliminarFila(this)">Eliminar</button>
                </td>
            `;
            tableBody.appendChild(newRow);
            index++;
        }

        function eliminarFila(btn) {
            const row = btn.closest("tr");
            row.remove();
        }
    </script>
}
