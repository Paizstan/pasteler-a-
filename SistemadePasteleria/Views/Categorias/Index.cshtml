@model IEnumerable<SistemadePasteleria.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="card shadow-sm p-4" style="background-color: rgba(255, 255, 255, 0.9); border-radius: 12px;">
    <h2 class="mb-4 text-center" style="color: #6c757d;"><i class="bi bi-bookmark-star-fill me-2"></i>   Lista de Categorías</h2>
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="busqueda" value="@ViewBag.Busqueda"
                   class="form-control" placeholder="Buscar por nombre o correo"
                   style="border-radius: 8px 0 0 8px;">
            <button type="submit" class="btn"
                    style="background-color: #6c757d; color: white; border-radius: 0 8px 8px 0;">
                🔍 Buscar
            </button>
        </div>
    </form>

    <a asp-action="Create"
       class="btn mb-3"
       style="background-color: #adb5bd; color: white; border-radius: 8px;">
        ➕ Nueva Categoria
    </a>

    <table class="table table-hover table-bordered" style="background-color: white; border-radius: 8px; overflow: hidden;">
        <thead style="background-color: #e9ecef; color: #6c757d;">
            <tr>
                <th>Nombre</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Nombre</td>
                    <td class="align-middle text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #dee2e6; color: #6c757d; border-radius: 6px;">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #cfe2f3; color: #495057; border-radius: 6px;">👁️ Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #e57373; color: white; border-radius: 6px;">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link" href="?pagina=@i&buscar=@ViewBag.Buscar"
                           style="border-radius: 6px; color: @(i == ViewBag.PaginaActual ? "white" : "#6c757d"); background-color: @(i == ViewBag.PaginaActual ? "#6c757d" : "white");">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

    <partial name="_Paginacion" model="ViewBag.Paginacion" />
</div>