@model IEnumerable<SistemadePasteleria.Models.Pedido>

@{
    ViewData["Title"] = "Reporte de Volumen de Ventas";
}

<h2>Reporte de Volumen de Ventas - Vida Mia</h2>

<form asp-action="VolumenVentas" method="get" class="mb-3">
    <div class="row mb-2">
        <div class="col-md-3">
            <label>Filtrar por día</label>
            <input type="date" name="fecha" class="form-control" value="@ViewBag.FiltroFecha" />
        </div>
        <div class="col-md-3">
            <label>Filtrar por mes</label>
            <input type="month" name="mes" class="form-control" value="@ViewBag.FiltroMes" />
        </div>
        <div class="col-md-3">
            <label>Estado</label>
            <select name="estado" class="form-control">
                @{
                    string est = ViewBag.FiltroEstado ?? "Todos";
                    string[] estados = new[] { "Todos", "Pendiente", "En proceso", "Finalizado", "Anulado" };
                }
                @foreach (var e in estados)
                {
                    <option value="@e" selected="@(e==est)">@e</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-secondary w-100">Aplicar</button>
            <button type="submit"
                    class="btn btn-primary w-100"
                    formaction="@(Url.Action("VolumenVentasPDF","Reportes"))"
                    formmethod="post">
                Generar PDF
            </button>
        </div>
    </div>
</form>


<hr />

<h4>Pedidos filtrados</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var pedido in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@pedido.Cliente?.Nombre</td>
                    <td>@pedido.Usuario?.Nombre</td>
                    <td>@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@pedido.Estado</td>
                    <td>@pedido.Total.ToString("C")</td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No hay pedidos para mostrar</td>
            </tr>
        }
    </tbody>
</table>
